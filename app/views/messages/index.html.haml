


-# .top
-#   グループを作成しました

.left
  .left__header
    .left__header__username-box
      .username
      = current_user.name
      .icon-box
        .newgroup
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
        =link_to edit_user_path(current_user) do
          = fa_icon 'cog',class: "icon"

  .leftblock
    - current_user.groups.each do |group|
      .leftblock__main
        = link_to group_messages_path(group) do
          .groupname
            = group.name
          .latest 
            = group.show_last_message


.right
  .right__header
    .right__header__group
      .right-groupname groupname
      .member menber
    .right__header__editbtn Edit
  .right__main

    - @messages.each do|message|
      .message
        .message-username  
          =message.user.name
        .message-date
          =message.created_at.strftime("%Y/%m/%d %H:%M")
        .message-text
          - if message.content.present?
            = message.content
            = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
        


    .form
      .form__box
        =form_for [@group, @message] do |f|
          .form__box__textbox  
            = f.text_field :content, class: 'formbox__textbox', id: "textbox" , placeholder: 'type a message'
            .form__mask
              = f.label :image, class: 'form__mask__image' do
                = fa_icon 'picture-o', class: 'icon'
                = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'sendbtn'    